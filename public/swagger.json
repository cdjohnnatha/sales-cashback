swagger: "2.0"
info:
  description: "This is a swagger documentation for sales-cashback. For use any route, you must authenticate"
  version: "1.0.0"
  title: "Swagger sales-cashback"
  license:
    name: "Apache 2.0"
    url: "http://www.apache.org/licenses/LICENSE-2.0.html"
host: "localhost:3000"
basePath: "/api/"
tags:
  - name: "Auth"
    description: "Authentication"
  - name: "Resellers"
    description: "Operations about resellers"
schemes:
  - "http"
securityDefinitions:
  auth:
    type: apiKey
    name: Authorization
    in: header
paths:
  /v1/auth:
    post:
      tags:
      - "Auth"
      summary: "Authenticate user"
      description: "This for authenticate users."
      operationId: "authUser"
      produces:
      - "application/json"
      parameters:
      - in: "formData"
        name: "email"
        description: "Reseller email"
        required: true
        type: string
        format: email
        example: "claudio@example.com"
      - in: "formData"
        name: "password"
        description: "Reseller password"
        required: true
        type: string
        minValue: 8
        example: "123456789"
        format: password
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Token"
        404:
          description: "User not found"
  /v1/resellers/order-comissions:
    post:
      tags:
      - "Order Comissions"
      security:
      - auth: []
      summary: "Create order comission"
      operationId: "createOrderComission"
      produces:
      - "application/json"
      parameters:
        - name: shopping_code
          in: formData
          required: true
          type: string
          description: "Code from shopping receipt"
        - name: total_shopping_amount
          in: formData
          required: true
          type: number
          description: "Amount spent on shopping"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/OrderComission"
        400:
          description: "Bad Request"
    get:
      tags:
      - "Order Comissions"
      security:
      - auth: []
      summary: "Get a list of order comission"
      operationId: "listOrderComission"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/OrderComissionList"
        400:
          description: "Bad Request"
  /v1/resellers:
    post:
      tags:
      - "Resellers"
      security:
      - auth: []
      summary: "Create reseller"
      operationId: "createReseller"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Created reseller object"
        required: true
        schema:
          $ref: "#/definitions/ResellerInput"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/ResellerModel"
        400:
          description: "Bad Request"
  /v1/resellers/profile:
    get:
      tags:
      - "Resellers"
      security:
      - auth: []
      summary: "Get a reseller"
      operationId: "getReseller"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/ResellerModel"
        400:
          description: "Bad Request"
definitions:  
  Token:
    properties:
      jwt:
        type: "string"
    type: object
  
  OrderComission:
    properties:
      id:
        type: "integer"
        format: "int64"
      reseller_id:
        type: "integer"
        format: "int64"
      order_statuses:
        type: "string"
      total_shopping_amount:
        type: "number"
      cashback_percentage_used:
        type: "number"
      cashback_amount:
        type: "number"
      shopping_code:
        type: "string"
      created_at:
        type: "string"
      updated_at:
        type: "string"
      deleted_at:
        type: "string"
    type: object
  OrderComissionList:
    properties:
      order_comissions:
        type: "array"
        items:
          $ref: "#/definitions/OrderComission"
    type: object
  OrderComissionInput:
    properties:
      shopping_code:
        type: "string"
      total_amount:
        type: "string"
    type: object  
  Reseller:
    properties:
      id:
        type: "integer"
        format: "int64"
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
      email:
        type: "string"
      password:
        type: "string"
      created_at:
        type: "string"
      updated_at:
        type: "string"
    type: object
  ResellerModel:
    properties:
      id:
        type: "integer"
        format: "int64"
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
      email:
        type: "string"
      password:
        type: "string"
      created_at:
        type: "string"
      updated_at:
        type: "string"
      deleted_at:
        type: "string"
    type: object
  ResellerInput:
    properties:
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
        minValue: 11
        maxValue: 14
      email:
        type: "string"
        format: email
      password:
        type: "string"
    type: object
