swagger: "2.0"
info:
  description: "This is a swagger documentation for sales-cashback. For use any route, you must authenticate"
  version: "1.0.0"
  title: "Swagger sales-cashback"
  license:
    name: "Apache 2.0"
    url: "http://www.apache.org/licenses/LICENSE-2.0.html"
host: "localhost:3000"
basePath: "/api/"
tags:
  - name: "Auth"
    description: "Authentication"
  - name: "Resellers"
    description: "Operations about resellers"
schemes:
  - "http"
securityDefinitions:
  auth:
    type: apiKey
    name: Authorization
    in: header
paths:
  /v1/auth:
    post:
      tags:
      - "Auth"
      summary: "Authenticate user"
      description: "This for authenticate users."
      operationId: "authUser"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Get user token"
        required: true
        schema:
          $ref: "#/definitions/AuthInput"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Token"
        404:
          description: "User not found"
  /v1/products:
    get:
      tags:
      - "Products"
      security:
      - auth: []
      summary: "Products elements"
      description: "This for authenticate users to get a list of all products."
      operationId: "getListOfProducts"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/ProductList"
        400:
          description: "Bad Request"
  /v1/resellers:
    post:
      tags:
      - "Resellers"
      security:
      - auth: []
      summary: "Create reseller"
      operationId: "createReseller"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Created reseller object"
        required: true
        schema:
          $ref: "#/definitions/ResellerInput"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/ResellerModel"
        400:
          description: "Bad Request"
  /v1/resellers/profile:
    get:
      tags:
      - "Resellers"
      security:
      - auth: []
      summary: "Get a reseller"
      operationId: "getReseller"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/ResellerModel"
        400:
          description: "Bad Request"
definitions:  
  Token:
    properties:
      jwt:
        type: "string"
    type: object
  AuthInput:
    properties:
      email:
        type: "string"
        format: email
        example: "claudio@example.com"
      password:
        type: "string"
        minValue: 8
        example: "123456789"
    type: object
  
  Product:
    properties:
      id:
        type: "integer"
        format: "int64"
      name:
        type: "string"
      description:
        type: "string"
      qty_available:
        type: "integer"
      price:
        type: "number"
      created_at:
        type: "string"
      updated_at:
        type: "string"
      deleted_at:
        type: "string"
    type: object
  ProductInput:
    properties:
      name:
        type: "string"
      description:
        type: "string"
      qty_available:
        type: "integer"
      price:
        type: "number"
    type: object
  ProductList:
    properties:
      products:
        type: "array"
        items:
          $ref: "#/definitions/Products"
    type: object
  
  Reseller:
    properties:
      id:
        type: "integer"
        format: "int64"
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
      email:
        type: "string"
      password:
        type: "string"
      created_at:
        type: "string"
      updated_at:
        type: "string"
    type: object
  ResellerModel:
    properties:
      id:
        type: "integer"
        format: "int64"
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
      email:
        type: "string"
      password:
        type: "string"
      created_at:
        type: "string"
      updated_at:
        type: "string"
      deleted_at:
        type: "string"
    type: object
  ResellerInput:
    properties:
      first_name:
        type: "string"
      last_name:
        type: "string"
      cpf:
        type: "string"
        minValue: 11
        maxValue: 14
      email:
        type: "string"
        format: email
      password:
        type: "string"
    type: object
